	CASCADE CONSTRAINTS;

/* 작업분할 */
CREATE TABLE task_division (
	divno NUMBER NOT NULL, /* 분할번호 */
	taskno NUMBER NOT NULL, /* 작업번호 */
	projectno NUMBER NOT NULL, /* 프로젝트 번호 */
	title VARCHAR2(200), /* 제목 */
	startdate DATE, /* 시작일 */
	enddate DATE, /* 종료일 */
	progress NUMBER(2,1), /* 진행률 */
	etc VARCHAR2(2000) /* 기타 */
);

CREATE UNIQUE INDEX PK_task_division
	ON task_division (
		divno ASC,
		taskno ASC,
		projectno ASC
	);

ALTER TABLE task_division
	ADD
		CONSTRAINT PK_task_division
		PRIMARY KEY (
			divno,
			taskno,
			projectno
		);

ALTER TABLE task_division
	ADD
		CONSTRAINT FK_task_TO_task_division
		FOREIGN KEY (
			taskno,
			projectno
		)
		REFERENCES task (
			taskno,
			projectno
		)ON DELETE CASCADE;
	
/* 분할파일 테이블 */
	
ALTER TABLE div_file
	DROP
		CONSTRAINT FK_task_division_TO_div_file
		CASCADE;

ALTER TABLE div_file
	DROP
		PRIMARY KEY
		CASCADE
		KEEP INDEX;

DROP INDEX PK_div_file;

/* 분할 파일 */
DROP TABLE div_file 
	CASCADE CONSTRAINTS;

/* 분할 파일 */
CREATE TABLE div_file (
	taskno NUMBER NOT NULL, /* 작업번호 */
	projectno NUMBER NOT NULL, /* 프로젝트 번호 */
	divno NUMBER NOT NULL, /* 분할번호 */
	fname VARCHAR2(200), /* 파일명 */
	regdate DATE, /* 등록일 */
	fsize NUMBER, /* 파일크기 */
	uptdate DATE /* 변경일 */
);

CREATE UNIQUE INDEX PK_div_file
	ON div_file (
		taskno ASC,
		projectno ASC,
		divno ASC
	);

ALTER TABLE div_file
	ADD
		CONSTRAINT PK_div_file
		PRIMARY KEY (
			taskno,
			projectno,
			divno
		);

ALTER TABLE div_file
	ADD
		CONSTRAINT FK_task_division_TO_div_file
		FOREIGN KEY (
			divno,
			taskno,
			projectno
		)
		REFERENCES task_division (
			divno,
			taskno,
			projectno
		);

/* 일정 테이블 */
	
ALTER TABLE schedule
	DROP
		CONSTRAINT FK_emp_TO_schedule
		CASCADE;

ALTER TABLE schedule
	DROP
		PRIMARY KEY
		CASCADE
		KEEP INDEX;

DROP INDEX PK_schedule;

/* 일정 */
DROP TABLE schedule 
	CASCADE CONSTRAINTS;

/* 일정 */
CREATE TABLE schedule (
	scheno NUMBER NOT NULL, /* 일정번호 */
	empno VARCHAR2(50), /* 사번 */
	text VARCHAR2(200), /* 제목 */
	start_date DATE, /* 시작일 */
	end_date DATE /* 종료일 */
);

CREATE UNIQUE INDEX PK_schedule
	ON schedule (
		scheno ASC
	);

ALTER TABLE schedule
	ADD
		CONSTRAINT PK_schedule
		PRIMARY KEY (
			scheno
		);

ALTER TABLE schedule
	ADD
		CONSTRAINT FK_emp_TO_schedule
		FOREIGN KEY (
			empno
		)
		REFERENCES emp (
			empno
		);
	

